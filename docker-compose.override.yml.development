version: "3.5"

services:
    movary-db:
        image: mysql:8.0
        container_name: movary-db
        environment:
            MYSQL_ROOT_PASSWORD: ${DATABASE_ROOT_PASSWORD}
            MYSQL_USER: ${DATABASE_USER}
            MYSQL_PASSWORD: ${DATABASE_PASSWORD}
        volumes:
            - ./tmp/db/:/var/lib/mysql
        ports:
            - "${DATABASE_PORT_HOST}:3306"
