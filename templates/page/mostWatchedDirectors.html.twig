{% extends 'base.html.twig' %}

{% block title %}
    Most Watched Directors
{% endblock %}

{% block stylesheets %}
    <link href="/css/app.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
{% endblock %}

{% block body %}
    <main role="main" class="container">
        {{ include('component/navbar.html.twig') }}

        <div style="text-align: center;padding-top: 1rem">
            <form action="/history" method="GET">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="s" placeholder="Search" value="{{ (searchTerm is null) ? '' : searchTerm }}">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>
            <div class="row row-cols-3 row-cols-md-3 row-cols-lg-6">
                {% for mostWatchedDirector in mostWatchedDirectors %}
                    <div class="col" style="padding-bottom: 1rem;">
                        <div class="card h-100  position-relative" onclick="showDirectorModal(this.id)" id="{{ mostWatchedDirector.id }}" style="cursor: pointer;">
                            <div class="card-header text-truncate" style="padding: 0.2rem">
                                <small class="text-muted" style="font-siz1e: 0.9rem;">{{ mostWatchedDirector.name }}</small>
                            </div>
                            <input id="directorName_{{ mostWatchedDirector.id }}" value="{{ mostWatchedDirector.name }}" type="hidden">
                            <img src="https://image.tmdb.org/t/p/w500{{ mostWatchedDirector.poster_path }}" class="card-img-top" alt="...">
                            <div class="card-footer" style="padding: 0.1rem">
                                <small class="text-muted" style="font-size: 0.8rem">{{ mostWatchedDirector.count }}</small>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <ul class="pagination justify-content-center">
                {% if paginationElements.previous is null %}
                    <li class="page-item disabled"><p class="page-link"><span aria-hidden="true">&laquo;</span></p></li>
                    <li class="page-item disabled"><p class="page-link"><span aria-hidden="true">&lsaquo;</span></p></li>
                {% else %}
                    <li class="page-item">
                        <a class="page-link" href="/history?{{ (searchTerm is null) ? '' : "s=#{searchTerm}&" }}p=1">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="/mostWatchedDirectors?{{ (searchTerm is null) ? '' : "s=#{searchTerm}&" }}p={{ paginationElements.previous }}">
                            <span aria-hidden="true">&lsaquo;</span>
                        </a>
                    </li>
                {% endif %}
                <li class="page-item active">
                    <p class="page-link">{{ paginationElements.currentPage }} of {{ paginationElements.maxPage }}</p>
                </li>
                {% if paginationElements.next is null %}
                    <li class="page-item disabled"><p class="page-link"><span aria-hidden="true">&rsaquo;</span></p></li>
                    <li class="page-item disabled"><p class="page-link"><span aria-hidden="true">&raquo;</span></p></li>
                {% else %}
                    <li class="page-item">
                        <a class="page-link" href="/mostWatchedDirectors?{{ (searchTerm is null) ? '' : "s=#{searchTerm}&" }}p={{ paginationElements.next }}">
                            <span aria-hidden="true">&rsaquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="/mostWatchedDirectors?{{ (searchTerm is null) ? '' : "s=#{searchTerm}&" }}p={{ paginationElements.maxPage }}">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                {% endif %}
            </ul>

        </div>
    </main>

    <div class="modal fade" id="personModal" tabindex="-1" aria-labelledby="personModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="personModalName">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h6>Watched movies: </h6>
                    <ul id="personModalMovies">
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
