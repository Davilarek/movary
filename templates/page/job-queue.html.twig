{% extends 'base.html.twig' %}

{% block title %}
    Settings - Account
{% endblock %}

{% block body %}
    <main role="main" class="container">
        {{ include('component/navbar.html.twig') }}

        <div style="padding-top: 1rem">
            <p>Last 30 Jobs:</p>
            <div class="table-responsive" style="text-align: center;">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">User</th>
                        <th scope="col">Type</th>
                        <th scope="col">Status</th>
                        <th scope="col">Updated</th>
                        <th scope="col">Created</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for job in jobs %}
                        <tr>
                            <td>{{ job.userName|default('-') }}</td>
                            <td>{{ job.type }}</td>
                            <td>{{ job.status }}</td>
                            <td>{{ job.updatedAt|default('-') }}</td>
                            <td>{{ job.createdAt }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% if jobs|length == 0 %}<p>No jobs in history</p>{% endif %}
        <div class="d-grid gap-2">
            <a class="btn btn-warning" type="button" href="/job-queue/purge-processed">Purge processed jobs</a>
            <a class="btn btn-danger" type="button" href="/job-queue/purge-all">Purge all jobs</a>
        </div>
    </main>
{% endblock %}
