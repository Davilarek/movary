{% extends 'base.html.twig' %}
{% import 'makro/tmdb.html.twig' as tmdb %}

{% block title %}
    Person: {{ person.name }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.2.0/dist/css/datepicker.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
{% endblock %}

{% block scripts %}
    <script src="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.2.0/dist/js/datepicker-full.min.js"></script>
    <script src="/js/logMovie.js"></script>
{% endblock %}

{% block body %}
    <main role="main" class="container">
        {{ include('component/navbar.html.twig') }}
        <div style="text-align: center;padding-top: 1rem" class="clearfix">
            <form action="/log-movie" method="GET">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="s" placeholder="Search" value="{{ (searchTerm is null) ? '' : searchTerm }}">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>
        </div>

        {% if movies is empty %}
            <p>No search results...</p>
        {% else %}
            <ul class="list-group">
                {% for movie in movies %}
                    <li class="list-group-item list-group-item-action">
                        <div class="col clearfix" style="cursor: pointer" data-bs-toggle="modal" data-bs-target="#watchDateModal" id="{{ movie.id }}">
                            <img src="{{ tmdb.generatePosterImageUrl(movie.poster_path) }}" class="rounded float-start" alt="..." width="120rem">
                            <h5 style="padding-left: 8rem">{{ movie.title }} ({{ movie.release_date|date("Y") }})</h5>
                            <p style="padding-left: 8rem;font-size: 0.8rem">{{ movie.overview }}</p>
                            <input type="hidden" id="{{ movie.id }}_movieTitle" value="{{ movie.title }}">
                            <input type="hidden" id="{{ movie.id }}_movieReleaseYear" value="{{ movie.release_date|date("Y") }}">
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

        <br>

        <div class="modal fade" id="watchDateModal" tabindex="-1" aria-labelledby="watchDateModal" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="watchDateModalTitle">Log movie</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/log-movie" method="POST">
                        <div class="modal-body">
                            <input type="hidden" value="" name="tmdbId" id="tmdbId" required>
                            <div class="input-group">
                                <i class="bi bi-calendar-date input-group-text"></i>
                                <input type="text" class="datepicker_input form-control" placeholder="Watch date" aria-label="Watch date" name="watchDate" id="watchDate" required>
                            </div>
                            <input type="number" class="form-control" name="rating10" placeholder="Rating 10" min="1" max="10" required style="margin-top: 1rem">
                            <input type="number" class="form-control" name="rating5" placeholder="Rating 5" min="1" max="5" required style="margin-top: 1rem">
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Log movie</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
