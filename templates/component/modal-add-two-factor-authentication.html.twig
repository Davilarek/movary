<div class="modal fade" id="addTwoFactorAuthenticationModal" tabindex="-1" role="dialog" data-bs-backdrop="static" aria-labelledby="addTwoFactorAuthenticationModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addTwoFactorAuthenticationModalTitle">Add Two-Factor Authentication</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center pb-3" style="padding-top: 0">
                <div id="TOTPInformation" class="d-none">
                    <p style="margin-top: 1rem">Scan the following QR code with your authentication app or manually enter the secret below the QR code.</p>
                    <div id="qrcode" style="border: 4px solid white; width: min-content;" class="mb-2 mx-auto justify-content-center d-flex"></div>
                    <p id="TOTPSecret" class="text-break" style="font-size: 0.5rem;"></p>
                    <p style="margin-bottom: .5rem">Enter your authentication code below to enable Two-Factor Authentication</p>
                    <input type="text" class="form-control mb-2" id="authenticationCodeInput" maxlength="6" pattern="[0-9]" placeholder="Enter authentication code..." style="margin-bottom: 1rem!important;"/>
                    <div id="twoFactorAuthenticationAlertDiv"></div>
                    <button type="button" class="btn btn-success" onclick="enableTOTP()">Enable authentication</button>
                </div>
            </div>
        </div>
    </div>
</div>
