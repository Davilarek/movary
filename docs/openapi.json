{
  "openapi": "3.0.2",
  "info": {
    "title": "Movary",
    "version": ""
  },
  "servers": [
    {
      "url": "\/api"
    }
  ],
  "paths": {
    "\/users\/{username}\/history": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get the latest plays of a user",
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "description": "Name of user",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Search term",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Limit",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 24
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application\/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "watchlist": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "movie": {
                            "$ref": "#/components/schemas/movie"
                          },
                          "watchedAt": {
                            "type": "string",
                            "nullable": false
                          }
                        }
                      }
                    },
                    "currentPage": {
                      "type": "integer",
                      "example": 1
                    },
                    "maxPage": {
                      "type": "integer",
                      "example": 10
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        },
        "security": [
          {
            "authToken": []
          }
        ]
      }
    },
    "\/users\/{username}\/watchlist": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get the watchlist of a user",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application\/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "history": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "movie": {
                            "$ref": "#/components/schemas/movie"
                          },
                          "addedAt": {
                            "type": "string",
                            "nullable": false
                          }
                        }
                      }
                    },
                    "currentPage": {
                      "type": "integer",
                      "example": 1,
                      "nullable": false
                    },
                    "maxPage": {
                      "type": "integer",
                      "example": 10,
                      "nullable": false
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        },
        "security": [
          {
            "authToken": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "movie": {
        "type": "object",
        "nullable": false,
        "properties": {
          "id": {
            "type": "integer",
            "nullable": false
          },
          "title": {
            "type": "string",
            "nullable": false
          },
          "tagline": {
            "type": "string"
          },
          "overview": {
            "type": "string"
          },
          "originalLanguage": {
            "type": "string"
          },
          "runtime": {
            "type": "integer"
          },
          "posterPath": {
            "type": "string"
          },
          "releaseDate": {
            "type": "string"
          },
          "userRating": {
            "type": "integer"
          },
          "externalRatings": {
            "type": "object",
            "properties": {
              "tmdb": {
                "type": "object",
                "properties": {
                  "average": {
                    "type": "number"
                  },
                  "count": {
                    "type": "integer"
                  }
                }
              },
              "imdb": {
                "type": "object",
                "properties": {
                  "average": {
                    "type": "number"
                  },
                  "count": {
                    "type": "integer"
                  }
                }
              }
            }
          },
          "externalIds": {
            "type": "object",
            "properties": {
              "tmdb": {
                "type": "integer"
              },
              "trakt": {
                "type": "integer"
              },
              "imdb": {
                "type": "string"
              },
              "letterboxd": {
                "type": "string"
              }
            }
          },
          "updatedAt": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "nullable": false
          }
        }
      }
    },
    "responses": {
      "401": {
        "description": "Not authorized to see the resource"
      },
      "404": {
        "description": "The username was not found"
      }
    },
    "securitySchemes": {
      "authToken": {
        "type": "apiKey",
        "name": "X-Auth-Token",
        "in": "header"
      }
    }
  }
}
